extends base

block content
  main.main
    .container
      .tour-filters
        h1.heading-primary
          span Search Results for "#{query}"
        .filters
          .filter-group
            label.filter-label Difficulty:
            select.filter-select#difficultyFilter
              option(value='') All
              option(value='easy') Easy
              option(value='medium') Medium
              option(value='difficult') Difficult
          .filter-group
            label.filter-label Sort by:
            select.filter-select#sortFilter
              option(value='price') Price (Low to High)
              option(value='-price') Price (High to Low)
              option(value='ratingsAverage') Rating (High to Low)
              option(value='duration') Duration (Short to Long)
          .filter-group
            button.btn.btn--outline#resetFilters Reset Filters
      
      if tours.length > 0
        .card-container#tourContainer
          each tour in tours
            .card
              .card__header
                .card__picture
                  .card__picture-overlay &nbsp;
                  img.card__picture-img(src=`/img/tours/${tour.imageCover}`, alt=`${tour.name}`)
                h3.heading-tertirary
                  span= tour.name

              .card__details
                h4.card__sub-heading= `${tour.difficulty} ${tour.duration}-day tour`
                p.card__text= tour.summary
                .card__data
                  svg.card__icon
                    use(xlink:href='/img/icons.svg#icon-map-pin')
                  span= tour.startLocation.description
                .card__data
                  svg.card__icon
                    use(xlink:href='/img/icons.svg#icon-calendar')
                  span= tour.startDates[0].toLocaleString('en-us', {month: 'long', year: 'numeric'})
                .card__data
                  svg.card__icon
                    use(xlink:href='/img/icons.svg#icon-flag')
                  span= `${tour.locations.length} stops`
                .card__data
                  svg.card__icon
                    use(xlink:href='/img/icons.svg#icon-user')
                  span= `${tour.maxGroupSize} people`

              .card__footer
                p
                  span.card__footer-value= `$${tour.price}`
                  | 
                  span.card__footer-text per person
                p.card__ratings
                  span.card__footer-value= tour.ratingsAverage
                  | 
                  span.card__footer-text= `rating (${tour.ratingsQuantity})`
                a.btn.btn--small.btn--green(href=`/tour/${tour.slug}`) Details
      else
        .no-results
          h2 No tours found matching your search criteria
          p Try adjusting your search terms or filters
          a.btn.btn--green(href='/') Browse All Tours