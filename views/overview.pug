extends base

block content
  main.main
    section.hero
      .hero__content
        h1.hero__title Discover Amazing Tours
        p.hero__subtitle Book unforgettable adventures with local experts around the world
        .hero__cta
          a.btn.btn--primary(href='#tourContainer') Explore Tours
          a.btn.btn--secondary(href='/signup') Sign Up Now
    
    .container
      section#about.about-section
        .about-content
          h2.about-section__title About Bedvan Tours
          p.about-section__text.
            Bedvan Tours was founded with a passion for adventure and a commitment to providing 
            unforgettable experiences for travelers around the world. Our team of local experts 
            knows the hidden gems and secret spots that make each destination truly special.
          
          p.about-section__text.
            Since our inception, we've been dedicated to sustainable tourism, supporting local 
            communities, and preserving the natural beauty of the places we visit. Every tour 
            we offer is carefully crafted to provide an authentic experience while minimizing 
            environmental impact.
          
          .hero__cta
            a.btn.btn--primary(href='/about') Learn More About Us
            button.btn.btn--back(onclick='window.scrollTo({top: 0, behavior: "smooth"});')
              i.fas.fa-arrow-up
              | Back to Top
      
      .tour-filters
        .filters__header
          h2.heading-secondary Find Your Perfect Adventure
          p.filters__description Browse our collection of handpicked tours
        .filters
          .filter-group
            label.filter-label(for='difficultyFilter') Difficulty
            select.filter-select#difficultyFilter
              option(value='') All Levels
              option(value='easy') Easy
              option(value='medium') Medium
              option(value='difficult') Difficult
          .filter-group
            label.filter-label(for='sortFilter') Sort by
            select.filter-select#sortFilter
              option(value='price') Price (Low to High)
              option(value='-price') Price (High to Low)
              option(value='ratingsAverage') Rating (High to Low)
              option(value='duration') Duration (Short to Long)
          .filter-group
            button.btn.btn--outline#resetFilters
              i.fas.fa-redo
              | Reset Filters
      
      .card-container#tourContainer
        each tour in tours
          .card
            .card__header
              .card__picture
                .card__picture-overlay &nbsp;
                img.card__picture-img(src=`/img/tours/${tour.imageCover}`, alt=`${tour.name}`)
              .card__badges
                span(class=`badge badge--${tour.difficulty}`)= tour.difficulty
              h3.card__title= tour.name

            .card__details
              .card__location
                i.fas.fa-map-marker-alt.card__icon
                span= tour.startLocation.description
              .card__duration
                i.fas.fa-calendar.card__icon
                span= `${tour.duration} days`
              .card__group-size
                i.fas.fa-users.card__icon
                span= `${tour.maxGroupSize} people`
              .card__rating
                .stars
                  - for (var i = 1; i <= 5; i++)
                    i.fas(class=`${i <= Math.floor(tour.ratingsAverage) ? 'fa-star' : 'fa-star-half-alt'}`)
                span.card__rating-value= tour.ratingsAverage
                span.card__rating-count= `(${tour.ratingsQuantity})`

            .card__footer
              .card__price
                span.card__price-value= `$${tour.price}`
                span.card__price-text per person
              a.btn.btn--primary.btn--small(href=`/tour/${tour.slug}`) View Details
              button.btn.btn--back.btn--small(onclick='window.scrollTo({top: 0, behavior: "smooth"});')
                i.fas.fa-arrow-up
                | Back to Top