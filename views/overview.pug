extends base

block content
  main.main
    // Hero Bölümü
    section.hero-section.hero-section--modern
      .hero__overlay
      //- Resim yolunu sen belirteceksin
      img.hero__img(src='/img/dd.webp', alt='Harika Turlar Keşfet')
      .hero__content
        h1.hero__title Maceranı Keşfet
        p.hero__subtitle Bedwan ile unutulmaz bir yolculuğa çık

    // Hakkımızda Bölümü
    section.section-about.section-about--modern
      .container
        h2.section-about__title Hakkımızda
        p.section-about__text Bedwan, doğayla iç içe unutulmaz maceralar sunar. Her turumuz, uzman rehberlerimiz eşliğinde özenle tasarlanmıştır. Hayalindeki tatili bizimle yaşa!

    // Tur Kartları Bölümü
    section.section-tours.section-tours--modern
      .container
        h2.section-tours__title Turlarim
        .card-container.card-container--modern
          each tour in tours
            .card.card--modern
              .card__header
                .card__picture
                  .card__picture-overlay
                  img.card__picture-img(src=`/img/tours/${tour.imageCover}`, alt=`${tour.name}`)
                h3.heading-tertirary
                  span= tour.name
              .card__details
                h4.card__sub-heading= `${tour.difficulty} ${tour.duration}-günlük tur`
                p.card__text= tour.summary
                .card__data
                  svg.card__icon
                    use(xlink:href='/img/icons.svg#icon-map-pin')
                  span= tour.startLocation.description
                .card__data
                  svg.card__icon
                    use(xlink:href='/img/icons.svg#icon-calendar')
                  span= tour.startDates[0].toLocaleString('en-us', {month: 'long', year: 'numeric'})
                .card__data
                  svg.card__icon
                    use(xlink:href='/img/icons.svg#icon-flag')
                  span= `${tour.locations.length} durak`
                .card__data
                  svg.card__icon
                    use(xlink:href='/img/icons.svg#icon-user')
                  span= `${tour.maxGroupSize} kişi`
              .card__footer
                p
                  span.card__footer-value= `$${tour.price}`
                  span.card__footer-text kişi başı
                p.card__ratings
                  span.card__footer-value= tour.ratingsAverage
                  span.card__footer-text= `puan (${tour.ratingsQuantity})`
                a.btn.btn--green.btn--small(href=`/tour/${tour.slug}`) Detaylar
