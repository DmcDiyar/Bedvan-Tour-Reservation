doctype html
html(lang='en')
  head
    block head
      meta(charset='UTF-8')
      meta(name='viewport', content='width=device-width, initial-scale=1.0')
      meta(name='description', content='Bedvan Tours - Book unforgettable adventures with local experts')
      link(rel='stylesheet', href='https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&family=Open+Sans:wght@300;400;600&display=swap')
      link(rel='stylesheet', href='/css/style.css')
      link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css')
      link(rel='shortcut icon', type='image/png', href='/img/favicon.png')
      title Bedvan Tours | #{title}

  body(data-alert=`${alert ? alert : ''}`)
    // HEADER
    include _header

    // CONTENT
    block content
      h1 This is a placeholder heading

    // FOOTER
    include _footer

    // AI Assistant
    .ai-assistant
      .ai-assistant__icon#aiAssistantIcon
        i.fas.fa-robot
      .ai-assistant__chat#aiAssistantChat
        .ai-assistant__header
          h3 
            i.fas.fa-robot
            | AI Tour Assistant
          button.ai-assistant__close#aiAssistantClose
            i.fas.fa-times
        .ai-assistant__messages#aiMessages
          .ai-assistant__message.ai-assistant__message--bot
            | Hello! I'm your AI tour assistant. How can I help you today? You can ask me about specific tours, recommendations, or filters.
        .ai-assistant__input
          input#aiUserInput(type='text', placeholder='Ask about tours...')
          button#aiSendButton
            i.fas.fa-paper-plane

    // Make Stripe public key available to frontend
    if STRIPE_PUBLIC_KEY
      script.
        window.STRIPE_PUBLIC_KEY = '!{STRIPE_PUBLIC_KEY}';

    script(src='https://js.stripe.com/v3/')
    script(src='/js/bundle.js')
    script(src='/js/ai-assistant.js')