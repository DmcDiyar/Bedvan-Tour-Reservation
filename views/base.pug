doctype html
html
  head
    block head
      meta(charset='UTF-8')
      meta(name='viewport' content='width=device-width, initial-scale=1.0')
      // Bootstrap CSS (for faster modern UI)
      link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css')
      link(rel='stylesheet' href='/css/style.css')
      link(rel='shortcut icon' type='image/png' href='/img/favicon.png')
      link(rel='stylesheet' href='https://fonts.googleapis.com/css?family=Lato:300,300i,700')
      title Bedwan | #{title}
      // Inject environment variables for client-side use
      script.
        window.MAPBOX_TOKEN = '#{process.env.MAPBOX_ACCESS_TOKEN}';
        window.STRIPE_PUBLIC_KEY = '#{process.env.STRIPE_PUBLIC_KEY}';

  body
    // HEADER
    include _header

    // CONTENT
    block content
      h1 Bu bir yer tutucu başlık

    // FOOTER
    include _footer

    script(src='https://js.stripe.com/v3/')
    script(src='/js/bundle.js')
    script(src='/js/animations.js')