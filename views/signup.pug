extends base

block content
  main.main
    .signup-form.signup-form--modern
      h2.heading-secondary Hesap Oluştur
      form.form.form--signup
        .form__group
          label.form__label(for='name') İsim
          input#name.form__input(type='text', placeholder='Adınız', required)
        .form__group
          label.form__label(for='email') E-posta Adresi
          input#email.form__input(type='email', placeholder='ornek@ornek.com', required)
        .form__group.ma-bt-md
          label.form__label(for='password') Şifre
          input#password.form__input(type='password', placeholder='••••••••', required, minlength='8')
        .form__group
          label.form__label(for='password-confirm') Şifreyi Onayla
          input#password-confirm.form__input(type='password', placeholder='••••••••', required, minlength='8')
        .form__group
          button.btn.btn--primary(type='submit') Kayıt Ol