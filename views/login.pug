extends base

block content
  main.main
    .login-form.login-form--modern
      h2.heading-secondary.ma-bt-lg Hesabına Giriş Yap
      form.form.form--login
        .form__group
          label.form__label(for='email') E-posta Adresi
          input#email.form__input(type='email', placeholder='ornek@ornek.com', required)
        .form__group.ma-bt-md
          label.form__label(for='password') Şifre
          input#password.form__input(type='password', placeholder='••••••••', required, minlength='8')
        .form__group
          button.btn.btn--green Giriş Yap